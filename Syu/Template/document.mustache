<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="document.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="container">
    <h1>{{ name }} <small>{{ syntaxType }}</small></h1>

    <div>
        {{# abstract }}
            <p class="lead">{{ removeTags(abstract) }}</p>
        {{/ abstract}}
        {{# overview }}
            <h2>Overview</h2>
            <p>{{ removeTags(overview) }}</p>
        {{/ overview }}
        {{^ overview  }}{{^ abstract }}
            <p class="lead">No overview available.</p>
        {{/ abstract }}{{/ overview }}
    </div>

    {{# sections.count }}
    <div>
        <h2>Symbols</h2>
    {{/ sections.count }}
        {{# sections }}
        <div class="section">
            <h3>{{ title }}</h3>
            {{# symbols }}
            <div class="symbol">
                <h4>{{ removeTags(name) }}</h4>
                <p>{{ removeTags(abstract) }}</p>
            </div>
            {{/ symbols }}
        </div>
        {{/ sections }}
    {{# sections.count }}
    </div>
    {{/ sections.count }}
</div>
</body>
</html>
